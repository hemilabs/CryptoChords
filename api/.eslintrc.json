{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "max-params": ["error", { "max": 6 }],
        "no-console": "off",
        "no-shadow": ["error", { "allow": ["cb", "err"] }],
        "no-unused-vars": "warn",
        "jsdoc/require-jsdoc": "off",
        "require-jsdoc" : 0,
        "max-len": ["warn", { "code": 120 }]
    }
}
